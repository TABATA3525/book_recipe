<!DOCTYPE html>
<html>
  <head>
    <title>BookRecipe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul class="global-nav">
        <li>
          <%= link_to 'Book Recipe', root_path %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to '登録した本の一覧・検索', user_books_path %>
          </li>
          <li>
            <%= link_to '本の新規登録', new_user_book_path, data: {"turbolinks"=>false} %>
          </li>
          <li>
            <%= link_to 'カテゴリーの追加・編集', categories_index_url %>
          </li>
          <li>
            <%= link_to '読後感の追加・編集', feeling_categories_index_url %>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_user_session_url, method: :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to 'ログイン', new_user_session_url %>
          </li>
          <li>
            <%= link_to 'ユーザー新規登録', new_user_registration_url %>
          </li>
        <% end %>
      </ul>
    </nav>
    
    <%= yield %>
  </body>
</html>
